package br.com.teste.mercadoeletronico.config;

public class BaseTest {
	
	
	String pastaEvds = "evidencias/" + new SimpleDateFormat("yyyy-MM-dd HH-mm-ss").format(Calendar.getInstance().getTime()) + "/";
	
	@Before
	public void abreNavegador() {
		Driver.abreNavegador();
		 
	}

	@After
	public void fechaNavegador() {
		Driver.fechaNavegador();
	}
	
	
	public void tirarFoto(WebDriver navegador,String nomePrint) {
        File foto = ((TakesScreenshot)navegador).getScreenshotAs(OutputType.FILE); 
        try {
			FileUtils.copyFile(foto, new File(pastaEvds + nomePrint + ".png"));
		} catch (IOException e) {
			System.out.println("Houveram problemas ao copiar o arquivo para a pasta: " + e.getMessage());
		} 
    }
	
	

}
